<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} %-5p [%t]: %m%n"/>
        </Console>

        <!-- New file appender for logs.log -->
        <File name="FILE" fileName="logs/cli.log">
            <PatternLayout pattern="%d{ISO8601} %-5p [%t]: %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="org.example" level="INFO"/>
        <Root level="INFO">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>

</Configuration>